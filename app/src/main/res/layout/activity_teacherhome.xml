<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image1"
    tools:context="auribises.com.visitorbook.Activites.GuardhomeActivity">

    <Button
        android:id="@+id/buttonTeacher1"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="Teacher_Appointment"
        android:textSize="28dp"
        android:background="@drawable/circle"
        android:textColor="@color/white"
        android:onClick="onClickHandler"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.715"
        app:layout_constraintBottom_toTopOf="@+id/buttonTeacher_visitors" />

    <Button
        android:id="@+id/buttonTeacher_visitors"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="Teacher_Visitorentry"
        android:textSize="28dp"
        android:background="@drawable/circle"
        android:textColor="@color/white"
        android:onClick="onClickHandler"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.648" />

</android.support.constraint.ConstraintLayout>
